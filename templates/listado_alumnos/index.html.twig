{% extends 'base.html.twig' %}

{% block title %}Listado Alumnos
{% endblock %}

{% block body %}
	<div>
		<h1>Alumnos</h1>
		<table border="1" cellpadding="0" cellspacing="0">
			<thead>
				<tr>
					<th>id</th>
					<th>nExpediente</th>
					<th>nombre</th>
					<th>apellidos</th>
					<th>fechaNacimiento</th>
					<th>sexo</th>
					<th>email</th>
					<th>telefono</th>
					<th>grado</th>
                    <th>Notas</th>
					<th>Asignaturas</th>
				</tr>
			</thead>
			<thbody>
				{% for alumno in alumnos %}
					<tr>
						<th>{{alumno.id}}</th>
						<th>{{alumno.nExpediente}}</th>
						<th>{{alumno.nombre}}</th>
						<th>{{alumno.apellidos}}</th>
						<th>{{alumno.fechaNacimiento|dateNormal}}</th>
						<th>{{alumno.sexo}}</th>
						<th>{{alumno.email}}</th>
						<th>{{alumno.telefono}}</th>
						<th>{{alumno.grado.id}}</th>
                        <th><a href="{{ path('alumno_notas',{'alumnoId':alumno.id}) }}">Notas</a></th>
						<th><a href="{{ path('alumno_asignaturas',{'alumnoId':alumno.id}) }}">Asignaturas</a></th>
					</tr>
				{% endfor %}
			</thbody>
		</table>
	</div>
{% endblock %}
{% block stylesheets %}{% endblock %}
{% block javascripts %}{% endblock %}
